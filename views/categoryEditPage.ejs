<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Category | FlightHub</title>
    <style>
        .edit-category-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background: white;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }
        .page-title {
            color: #2c3e50;
            margin-bottom: 2rem;
            text-align: center;
            font-weight: 600;
        }
        .form-label {
            font-weight: 500;
            color: #34495e;
        }
        .form-control {
            border-radius: 8px;
            border: 1px solid #ddd;
            padding: 0.75rem;
            transition: all 0.3s ease;
        }
        .form-control:focus {
            border-color: #3498db;
            box-shadow: 0 0 0 0.2rem rgba(52,152,219,0.25);
        }
        .error-message {
            color: #e74c3c;
            font-size: 0.875rem;
            margin-top: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        .error-message i {
            font-size: 1rem;
        }
        .btn-submit {
            background: #3498db;
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 8px;
            transition: all 0.3s ease;
            width: 100%;
            margin-top: 1rem;
        }
        .btn-submit:hover {
            background: #2980b9;
            transform: translateY(-2px);
        }
        .form-floating {
            margin-bottom: 1.5rem;
        }
    </style>
</head>
<body class="bg-light">
    <%- include('_nav') %>

    <div class="edit-category-container">
        <h2 class="page-title">Edit Category</h2>
        <form method="post" action="/categories/list/<%= dataCategoryById.id %>/edit">
            <div class="form-floating mb-3">
                <input name="nameCategory" type="text" class="form-control" id="nameCategory" 
                       placeholder="Enter category name" value="<%= dataCategoryById.nameCategory %>">
                <label for="nameCategory">Name of Category</label>
                <% if (error) { %>
                    <% error.forEach(el => { %>
                        <% if (el.includes('Name of Category') ) { %>
                            <div class="error-message">
                                <i class="fas fa-exclamation-circle"></i>
                                <%= el %>
                            </div>
                        <% } %>
                    <% }) %>
                <% } %>
            </div>

            <div class="form-floating mb-3">
                <input name="price" type="number" class="form-control" id="price" 
                       placeholder="Enter price" value="<%= dataCategoryById.price %>">
                <label for="price">Price of Category</label>
                <% if (error) { %>
                    <% error.forEach(el => { %>
                        <% if (el.includes('Price') ) { %>
                            <div class="error-message">
                                <i class="fas fa-exclamation-circle"></i>
                                <%= el %>
                            </div>
                        <% } %>
                    <% }) %>
                <% } %>
            </div>

            <div class="form-floating mb-3">
                <input name="description" type="text" class="form-control" id="description" 
                       placeholder="Enter description" value="<%= dataCategoryById.description %>">
                <label for="description">Description</label>
                <% if (error) { %>
                    <% error.forEach(el => { %>
                        <% if (el.includes('Description') ) { %>
                            <div class="error-message">
                                <i class="fas fa-exclamation-circle"></i>
                                <%= el %>
                            </div>
                        <% } %>
                    <% }) %>
                <% } %>
            </div>

            <button type="submit" class="btn btn-primary btn-submit">
                <i class="fas fa-save me-2"></i>Save Changes
            </button>
        </form>
    </div>
    
    <%- include('_bootstrap') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</body>
</html>